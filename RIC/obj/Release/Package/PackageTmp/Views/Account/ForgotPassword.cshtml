@model DBLibrary.RIC_Employee

@{
    ViewBag.Title = "ForgotPassword";
   
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)    
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Reset Password</legend>

        <br />
        <table style="width: 50%; height: 100%" class="table container-fluid">
            <tr>
                <td>@Html.LabelFor(m => m.RE_Emp_Cd)</td>
                <td>@Html.TextBoxFor(m => m.RE_Emp_Cd, new { @class = "form-control input-sm chat-input" })</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <div class="col-md-12 text-left">
                        <input type="submit" class="btn btn-primary" value="Recover Account" />
                    </div>
                </td>
            </tr>
        </table>
    </fieldset>
   
}
@Html.ActionLink("Back to Login", "Login")
