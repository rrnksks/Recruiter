@{
    ViewBag.Title = "UplodaSubmissions";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<legend>Upload Submissions</legend>
<br />

@using (Html.BeginForm("UploadSubmissionsDaily", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{        
    <div>

        <table style="width: 50%; height: 100%" class="table container-fluid">

            <tr>
                <td>
                    @Html.TextBox("file","", new { type = "file",accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel", required = "required" })
                    <br />
                </td>
                <td>
                    <input type="submit" value="Upload" />
                </td>
            </tr>

        </table>
    </div>  
    <div>
        @Html.ActionLink("View Submission", "ViewSubmission")
    </div>
    
           
}