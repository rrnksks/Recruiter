@model RIC.Models.Client.ClientReportView
@{
    ViewBag.Title = "ClientDetailsByQuaterly";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
  
      .panel-primary>.panel-heading {
    color: #fff;
    background-color:  #337ab7;
    border-color: #337ab7;
}
    .textCapitalize {
        text-transform: capitalize;
    }
    
    .LblHeader {
    font-size: x-large;
    padding-right: 20px;
    padding-left: 20px;
    vertical-align: -webkit-baseline-middle;
}
    .panel-heading {
    /* padding: 10px 15px; */
    border-bottom: 1px solid transparent;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;

}
    .heading {
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    }
    #ClientQuaterlyPartial {
        height: 577px;
        overflow: auto;
    }
   
</style>


<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title heading">Client Quarterly Dashboard</h1>
        </div>
        @*<div class="row">
            <div class="panel panel-primary DivBorder">
                   <div style="text-align: center;padding:0%" class="panel-heading headingStyle affix" data-spy="affix" data-offset-top="5">
                 <label class="LblHeader">
                     Client Dashboard For Quarterly

                 </label>
             </div>*@
        @using (Html.BeginForm())
        {
            <input type='hidden' value='@ViewBag.Empcd' id='empCd' name="empCd" />


            <div class="row" style="margin-top: 3%;">
                <div class="form-row col-md-12" style="margin-left: 3%;">
                    <div class="form-group col-md-4">
                        <div class=" col-md-2">
                            @Html.LabelFor(model => model.Year, new { @class = "form" })
                        </div>
                        <div class=" col-md-6">
                            @Html.DropDownListFor(model => model.GetYear, Model.YearSelectList, new { @id = "ddlyear", @class = "form-control" })
                        </div>
                    </div>
                    @*<div class="form-group col-md-4">
                            <div class=" col-md-2">
                                @Html.LabelFor(model => model.Client, new { @class = "form" })
                            </div>
                            <div class=" col-md-9">
                                @Html.DropDownListFor(model => model.ClientSelected, Model.ClientList, new { @class = "form-control", @id = "ddlClient" })
                            </div>

                        </div>*@
                    <div class="form-group col-md-4">
                        <div class="form-group col-md-6">
                            <input type="submit" class="btn btn-primary" value="Search" id="btnSearch" />
                        </div>
                    </div>
                </div>


            </div>


        }

    </div>
    
</div>
<div id="ClientQuaterlyPartial"></div>     
@*</div> </div>*@
          
      
  



<script>

    $(document).ready(function () {
        var jobRepartPartialUrl = '@Url.Action("ClientDetailsByQuaterlyPartial")';
        var $getYear = parseInt($("#ddlyear").val());
        var $getClient = $("#ddlClient").val();
        var $empCd = $('#empCd').val();
        $.ajax({
            type: "GET",
            url: jobRepartPartialUrl,
            contentType: "application/json; charset=utf-8",
            data: { "EmpCd":$empCd,"Year": $getYear, "Client": $getClient },
            datatype: "json",
            success: function (data) {
                $('#ClientQuaterlyPartial').html(data);

            },
            error: function () {
                //alert("Dynamic content load failed.");
            }
        });

    });
       

    

</script>