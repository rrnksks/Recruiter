@model IEnumerable<RIC.Models.Client.ClientMapping>
@{
    ViewBag.Title = "AddClientList";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    var student = ViewBag.JobUserName;
}
<style>
    .textCapitalize {
        text-transform: capitalize;
    }

    .btn-all {
        background-color: #a9e0f1;
    }

    #UserList_length {
        display: none;
    }
    /*model style*/
    .modal-confirm {
        color: #636363;
        width: 400px;
    }

        .modal-confirm .modal-content {
            padding: 20px;
            border-radius: 5px;
            border: none;
            text-align: center;
            font-size: 14px;
        }

        .modal-confirm .modal-header {
            border-bottom: none;
            position: relative;
        }

        .modal-confirm h4 {
            text-align: center;
            font-size: 26px;
            margin: 30px 0 -10px;
        }

        .modal-confirm .close {
            position: absolute;
            top: -5px;
            right: -2px;
        }

        .modal-confirm .modal-body {
            color: #999;
        }

        .modal-confirm .modal-footer {
            border: none;
            text-align: center;
            border-radius: 5px;
            font-size: 13px;
            padding: 10px 15px 25px;
        }

            .modal-confirm .modal-footer a {
                color: #999;
            }

        .modal-confirm .icon-box {
            width: 80px;
            height: 80px;
            margin: 0 auto;
            border-radius: 50%;
            z-index: 9;
            text-align: center;
            border: 3px solid #f15e5e;
        }

            .modal-confirm .icon-box i {
                color: #f15e5e;
                font-size: 46px;
                display: inline-block;
                margin-top: 13px;
            }

        .modal-confirm .btn {
            color: #fff;
            border-radius: 4px;
            background: #60c7c1;
            text-decoration: none;
            transition: all 0.4s;
            line-height: normal;
            min-width: 120px;
            border: none;
            min-height: 40px;
            border-radius: 3px;
            margin: 0 5px;
            outline: none !important;
        }

        .modal-confirm .btn-info {
            background: #c1c1c1;
        }

            .modal-confirm .btn-info:hover, .modal-confirm .btn-info:focus {
                background: #a8a8a8;
            }

        .modal-confirm .btn-danger {
            background: #f15e5e;
        }

            .modal-confirm .btn-danger:hover, .modal-confirm .btn-danger:focus {
                background: #ee3535;
            }

    .trigger-btn {
        display: inline-block;
        margin: 100px auto;
    }
</style>

<script>

    function moveItems(origin, dest) {
        $(origin).find(':selected').appendTo(dest);
    }


    function moveAllItems(origin, dest) {
        $(origin).children().appendTo(dest);
    }

    $(document).ready(function () {

        $('#multiselect_leftSelected').click(function () {
            moveItems('#multiselect_to', '#multiselect_from');
        });

        $('#multiselect_rightSelected').on('click', function () {
            moveItems('#multiselect_from', '#multiselect_to');
        });

        $('#multiselect_leftAll').on('click', function () {
            moveAllItems('#multiselect_to', '#multiselect_from');
        });

        $('#multiselect_rightAll').on('click', function () {
            moveAllItems('#multiselect_from', '#multiselect_to');
        });

        $("#btnsubmit").on("click", function () {
            var $getValues = new Array();
            var $getLength = $("#multiselect_to option").length;


            if ($getLength == 0) {
                alert("Select atleast one Client");
                return false
            }
            for (var i = 0; i < $getLength; i++) {
                var $getValue = $("#multiselect_to").find("option:eq('" + i + "') ").val();
                $getValues.push($getValue);
            }
            $("#AccountId").val($getValues);
            console.log($("#AccountId").val());

        });


        $("#searchClient1").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#multiselect_from option").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $("#searchClient2").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#multiselect_to option").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>


