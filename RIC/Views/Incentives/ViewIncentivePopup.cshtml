@model IEnumerable<DBLibrary.Get_All_IncentivesResult>



<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 style="text-align: center;" class="modal-title textCapitalize">@ViewBag.Header</h4>
    </div>
    <div id="divModel" class="modal-body">

        <table class="table">
            <thead class="MainTableHeadBgIncentive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RI_Company)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RI_Candidate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RI_StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RI_EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RI_NetMargin)
                    </th>
                    <th>
                        @if (ViewBag.Header != "Incentives")
                        {
                            @Html.DisplayNameFor(model => model.RI_Incentive)
                        }
                        else if (ViewBag.IncentiveType == "RecurringPaid")
                        {
                            @Html.DisplayNameFor(model => model.RI_TotalRecurringPaid)

                        }
                        else if (ViewBag.IncentiveType == "OneTimeIncentive")
                        {
                            @Html.DisplayNameFor(model => model.RI_OneTimeIncentive)

                        }
                        else
                        {
                            @Html.DisplayNameFor(model => model.RI_finalDifference)

                        }
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RI_Remarks)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td style="text-align:left !important">
                        @Html.DisplayFor(modelItem => item.RI_Company)
                    </td>
                    <td style="text-align:left !important">
                        @Html.DisplayFor(modelItem => item.RI_Candidate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RI_StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RI_EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RI_NetMargin)
                    </td>
                    <td>
                        @if (ViewBag.Header != "Incentives")
                        {
                            @Html.DisplayFor(modelItem => item.RI_Incentive)

                        }
                        else if (ViewBag.IncentiveType == "RecurringPaid")
                        {
                            @Html.DisplayFor(modelItem => item.RI_TotalRecurringPaid)

                        }
                        else if (ViewBag.IncentiveType == "OneTimeIncentive")
                        {
                            @Html.DisplayFor(modelItem => item.RI_OneTimeIncentive)

                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.RI_finalDifference)

                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RI_Remarks)
                    </td>

                </tr>
    
                }
                @if (Model.Count() <= 0)
                { 
                    <tr>
                        <td colspan="7" class="alert alert-danger">No data available in table<br />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>
</div>
