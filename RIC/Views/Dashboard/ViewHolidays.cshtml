@model IEnumerable<DBLibrary.RIC_Holidays>

@{
    ViewBag.Title = "ViewHolidays";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<legend>Holidays</legend>

@*<p>
    @Html.ActionLink("Upload", "UploadHolidayList")
</p>*@
<table style="width: 50%; height: 100%;margin-left:25%" class="table table-striped table-hover table-bordered">
     <thead style="background-color: #337ab7; color: white;">
    <tr>
        <th>
            Sl.No
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RH_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RH_Festival)
        </th>
        
    </tr>
         </thead>
    @{
        int index = 1;
        }
@foreach (var item in Model) {
    <tr>
        <td> @index </td>

        <td>
           @item.RH_Date.ToString("MM-dd-yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RH_Festival)
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RH_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.RH_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RH_Id })
        </td>*@
    </tr>
   
        index += 1;
        
}

</table>
